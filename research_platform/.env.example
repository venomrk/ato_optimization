# API Keys for LLM Providers
OPENAI_API_KEY=sk-xxx
OPENAI_API_KEY_2=sk-xxx
OPENAI_API_KEY_3=sk-xxx

ANTHROPIC_API_KEY=sk-ant-xxx
ANTHROPIC_API_KEY_2=sk-ant-xxx

GOOGLE_API_KEY=AIzaxxx
GOOGLE_API_KEY_2=AIzaxxx

DEEPSEEK_API_KEY=sk-xxx
QWEN_API_KEY=xxx
XAI_API_KEY=xai-xxx
YI_API_KEY=xxx

# Paper Source APIs
SEMANTIC_SCHOLAR_API_KEY=xxx
SPRINGER_API_KEY=xxx
ELSEVIER_API_KEY=xxx

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/research_platform
REDIS_URL=redis://localhost:6379/0

# Vector Database
VECTOR_DB_TYPE=pinecone  # pinecone, weaviate, chroma, qdrant
PINECONE_API_KEY=xxx
PINECONE_ENVIRONMENT=us-west1-gcp
PINECONE_INDEX_NAME=research-papers

WEAVIATE_URL=http://localhost:8080
QDRANT_URL=http://localhost:6333

# Storage
PAPER_STORAGE_PATH=./data/papers
MODEL_STORAGE_PATH=./data/models
CACHE_DIR=./data/cache

# Agent Configuration
MAX_AGENTS=15
AGENT_TIMEOUT=300
CONSENSUS_THRESHOLD=0.7
MIN_CONFIDENCE_SCORE=0.6

# Rate Limiting
MAX_API_CALLS_PER_MINUTE=60
RATE_LIMIT_WINDOW=60

# Fine-tuning
ENABLE_FINE_TUNING=true
FINE_TUNE_BATCH_SIZE=8
FINE_TUNE_EPOCHS=3
LORA_RANK=8
LORA_ALPHA=16

# Continuous Learning
AUTO_UPDATE_MODELS=true
MODEL_CHECK_INTERVAL=86400  # 24 hours
PAPER_INGESTION_INTERVAL=3600  # 1 hour
MAX_PAPERS_PER_QUERY=50

# Monitoring
LOG_LEVEL=INFO
ENABLE_METRICS=true
PROMETHEUS_PORT=9090

# API Server
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
ENABLE_CORS=true

# Security
SECRET_KEY=change-this-to-a-random-secret-key
ACCESS_TOKEN_EXPIRE_MINUTES=30
