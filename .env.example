# Backend Environment Variables
# Copy this file to .env and fill in your values

# =======================
# REQUIRED FOR BACKEND
# =======================

# Database connection string
# Local development (SQLite):
# DATABASE_URL=sqlite:///./dev.db
# Production (PostgreSQL):
DATABASE_URL=postgresql://user:password@localhost:5432/rko_research

# Secret key for JWT tokens (MUST be at least 32 characters)
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=change-this-to-a-random-secret-key-min-32-chars

# CORS origins (comma-separated list of allowed origins)
# Local development:
CORS_ORIGINS=http://localhost:3000,http://localhost:5173
# Production:
# CORS_ORIGINS=https://your-project.vercel.app,https://your-domain.com

# =======================
# OPTIONAL API KEYS
# =======================

# OpenRouter API for AI chat capabilities
# Get your key at: https://openrouter.ai/
OPENROUTER_API_KEY=sk-or-v1-your-openrouter-api-key

# SerpAPI for Google Scholar search
# Get your key at: https://serpapi.com/
SERP_API_KEY=your-serpapi-key

# Stripe for payment processing
# Get your keys at: https://stripe.com/
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-stripe-webhook-secret
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key

# Redis for caching (optional)
# Local: redis://localhost:6379
# Upstash: redis://default:password@host:port
REDIS_URL=redis://localhost:6379

# =======================
# FRONTEND VARIABLES
# =======================
# Note: Frontend needs separate .env file in frontend/ directory
# See frontend/.env.example for frontend configuration

# =======================
# DEVELOPMENT SETTINGS
# =======================

# Environment: development, production, testing
ENVIRONMENT=development

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Enable debug mode (shows detailed error messages)
DEBUG=false

# =======================
# DATABASE SETTINGS
# =======================

# Database pool size (for PostgreSQL)
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10

# =======================
# JWT SETTINGS
# =======================

# JWT token expiration (in minutes)
ACCESS_TOKEN_EXPIRE_MINUTES=30

# JWT algorithm
JWT_ALGORITHM=HS256

# =======================
# RATE LIMITING
# =======================

# Enable rate limiting
RATE_LIMIT_ENABLED=true

# Requests per minute
RATE_LIMIT_PER_MINUTE=60

# =======================
# CREDITS SYSTEM
# =======================

# Default credits for new free tier users
DEFAULT_FREE_CREDITS=100

# Cost per API request (in credits)
CREDITS_PER_SEARCH=1
CREDITS_PER_CHAT=5

# =======================
# EMAIL SETTINGS (Future)
# =======================

# SMTP settings for email notifications
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# SMTP_FROM=noreply@yourdomain.com

# =======================
# MONITORING (Future)
# =======================

# Sentry DSN for error tracking
# SENTRY_DSN=https://your-sentry-dsn

# =======================
# NOTES
# =======================

# Railway.app: DATABASE_URL is automatically set when you add PostgreSQL
# Vercel: Set VITE_* variables in Vercel dashboard for frontend
# Render: All variables can be set in render.yaml or dashboard
# Netlify: Set variables in Netlify dashboard

# Security Tips:
# 1. Never commit .env file to git
# 2. Use different SECRET_KEY for each environment
# 3. Use test Stripe keys (sk_test_) for development
# 4. Rotate keys regularly in production
# 5. Use environment-specific API keys
